@page "/register"

@inject HttpClient Http
@using TodoProject.Models



<RadzenTemplateForm TItem="RegisterRequest">
  <RadzenFieldset>
    <RadzenStack Orientation="Orientation.Vertical" Gap="1rem">
      <RadzenLabel Component="Name" Text="Enter your full name" />
      <RadzenTextBox @bind-Value="registerRequest.Name" Name="Name" />
      <RadzenLabel Component="Email" Text="Enter your e-mail" />
      <RadzenTextBox @bind-Value="registerRequest.Email" Name="Email" />
      <RadzenLabel Component="Username" Text="Enter a username" />
      <RadzenTextBox @bind-Value="registerRequest.Username" Name="Username"/>
      <RadzenLabel Component="Password" Text="Enter a password" />
      <RadzenPassword @bind-Value="registerRequest.Password" Name="Password" />
    </RadzenStack>
  </RadzenFieldset>

</RadzenTemplateForm>





@code {
  RegisterRequest registerRequest = new();
}